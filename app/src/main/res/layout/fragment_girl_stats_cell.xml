<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.korvin.dominion.activity.castle.stats.GirlStatsCellFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@android:string/unknownName"
        android:id="@+id/fragment_girl_stats_cell_name"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@android:string/unknownName"
        android:id="@+id/fragment_girl_stats_cell_value"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@android:string/unknownName"
        android:id="@+id/fragment_girl_stats_cell_diff"
        android:layout_gravity="center_vertical|right"
        android:layout_margin="20dp" />

</FrameLayout>
